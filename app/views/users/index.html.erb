<h1>Welcome to daftchat</h1>
<%= form_for @user, url: url_for(action: :authenticate) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@user.errors.count, "error") %> prohibited this message from being saved:</h2>

      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<p>Which dafter are you?</p>

<%= select_tag "user", options_from_collection_for_select(@users, "id", "name"), prompt: "Select a Name" %>

<%= f.submit "Submit" %>
<% end %>






